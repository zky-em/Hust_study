<!--pages/detial/detial.wxml-->
<view class="detail-info">
  <image src="{{product.image}}"></image>
  <view class="item" style="width: 200rpx; height: 50rpx; display: block; box-sizing: border-box; position: relative; left: 120rpx; top: 0rpx">{{product.name}}</view>
  <view class="item" style="width: 200rpx; height: 50rpx; display: block; box-sizing: border-box; position: relative; left: 430rpx; top: -50rpx">ï¿¥{{product.price}}</view>
</view>

<view class="new-button" style="width: 300rpx; height: 80rpx; display: block; box-sizing: border-box; position: relative; left: 225rpx; top: 100rpx">
  <button bindtap="getNumber" data-x="1"  style="width: 100rpx; height: 80rpx; display: block; box-sizing: border-box; left: -100rpx; position: relative; top: -2rpx">
    <view class="a-button">
      +1
    </view>
  </button>
  <view style="width: 100rpx; height: 80rpx; display: block; box-sizing: border-box; position: relative; left: 99rpx; top: -81rpx">
    <view class="new-text" style="position: relative; left: 0rpx; top: 6rpx">
      {{number}}
    </view>
  </view> 
  <button bindtap="getNumber" data-x="0" style="width: 100rpx; height: 80rpx; display: block; box-sizing: border-box; left: 100rpx; top: -160rpx; position: relative">
    <view class="a-button">
      +1
    </view>
  </button>
</view>
