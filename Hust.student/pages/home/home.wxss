/* pages/home/home.wxss */

swiper {
   height: 385rpx;  /*轮播图高度 */
   border: 2rpx solid #efefef;
}

swiper image {
  margin-top: 5rpx;
  width:100%;  /*轮播图宽度占比*/
  height:100%;  /*轮播图高度占比*/
}

.grid-list {
  display:flex;
  flex-wrap:wrap;
  margin-top: 10rpx; 
  border-left: 2rpx solid #efefef;
  border-top: 2rpx solid #efefef;
}

.grid-item {
  width:33.33%;
  height: 200rpx;
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content: center;
  border-right: 2rpx solid #efefef;
  border-bottom: 2rpx solid #efefef;
  box-sizing: border-box;
}

.grid-item image {
  width: 90rpx;
  height: 90rpx;
  margin-top: 10rpx;
}

.grid-item text {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.img-box {
  display: flex;
  padding: 20rpx 10rpx;
  justify-content: space-around;
  border: 2rpx solid #efefef;
}

.img-box image {
  width: 45%;
  border: 2rpx solid #345069;
}